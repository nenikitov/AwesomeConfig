configuration {
    /* Behavior */
    modi: "window,drun,run";
    terminal: "alacritty";
    case-sensitive: false;
	cycle: true;
	scroll-method: 0;
	click-to-exit: true;


    /* Display */
    location: 0;
	sidebar-mode: true;
    show-icons: true;
    drun-display-format: "{name}[<span weight='light' size='small'><i>({generic})</i></span>]";
	monitor: "-5";


    /* Appearence */
    theme: "grid.rasi";
    /*icon-theme: ;*/
    font: "mono 12";
}
